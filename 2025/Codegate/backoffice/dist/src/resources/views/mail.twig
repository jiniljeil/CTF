{% include 'components.header' %}
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Mail Box</h1>
    <div class="card shadow mb-4">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="inbox-tab" data-bs-toggle="tab" data-bs-target="#inbox" type="button" role="tab" aria-controls="Inbox" aria-selected="true">Inbox</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="outbox-tab" data-bs-toggle="tab" data-bs-target="#outbox" type="button" role="tab" aria-controls="Outbox" aria-selected="false">Outbox</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="send-tab" data-bs-toggle="tab" data-bs-target="#send" type="button" role="tab" aria-controls="Send" aria-selected="false">Mail Send</button>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="inbox" role="tabpanel" aria-labelledby="inbox-tab">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="inbox_table" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>id</th>
                                <th>sender</th>
                                <th>receiver</th>
                                <th>subject</th>
                                <th>content</th>
                                <th>datetime</th>
                            </tr>
                            </thead>
                            <tbody id="inbox_data">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="outbox" role="tabpanel" aria-labelledby="outbox-tab">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="outbox_table" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>id</th>
                                <th>sender</th>
                                <th>receiver</th>
                                <th>subject</th>
                                <th>content</th>
                                <th>datetime</th>
                            </tr>
                            </thead>
                            <tbody id="outbox_data">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="send" role="tabpanel" aria-labelledby="send-tab">
                <div class="card-body">
                    <div class="mb-3">
                        <label for="receiver_email" class="form-label">Receiver email address</label>
                        <input type="email" class="form-control" id="receiver_email" placeholder="name@novition.org">
                    </div>
                    <div class="mb-3">
                        <label for="subject" class="form-label">Subject</label>
                        <input type="text" class="form-control" id="subject" placeholder="subject">
                    </div>
                    <div class="mb-3">
                        <label for="mail_content" class="form-label">Content</label>
                        <input type="text" class="form-control" id="mail_content" placeholder="content">
                    </div>

                    <button type="button" id="send_mail" class="btn btn-primary">Mail Send</button>
                    <button type="button" id="view_template" class="btn btn-success">Template View</button>
                    {% if role is same as(2) %}
                        <br>
                        <button class="mt-4 btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#fornewemp" aria-expanded="false" aria-controls="fornewemp">For New Employee</button>

                        <div class="mt-5 collapse" id="fornewemp">
                            <div class="card card-body">
                                <div class="mb-3">
                                    <label for="template_id" class="form-label">template number</label>
                                    <input type="text" class="form-control" id="template_id" value="0" disabled>
                                </div>
                                <div class="mb-3">
                                    <label for="name" class="form-label">name</label>
                                    <input type="text" class="form-control" id="name" placeholder="name">
                                </div>
                                <div class="mb-3">
                                    <label for="team" class="form-label">team</label>
                                    <input type="text" class="form-control" id="team" placeholder="team">
                                </div>
                                <div class="mb-3">
                                    <label for="salary" class="form-label">salary</label>
                                    <input type="text" class="form-control" id="salary" placeholder="salary">
                                </div>

                                <button type="button" id="generate_template" class="mt-4 btn btn-success">Template Generate</button>
                            </div>
                        </div>
                    {% endif %}
                </div>

                <hr class="mt-3 mb-2">
                <div class="card-body">
                    <h3>Copy mail template</h3>
                    <div class="mb-3 col-md-6">
                        <label for="template_result" class="form-label">selected template - 0</label>
                        <textarea class="form-control" id="template_result" rows="25" cols="`15`"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% include 'components.footer' %}
